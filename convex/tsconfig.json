{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ES2021", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "outDir": "dist"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", ".convex"]
}
